# http://editorconfig.org/
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{php,inc}]
indent_style = space
indent_size = 4

[{bin/bumpRelease,bin/createNewsEntry,bin/news2html}]
indent_style = space
indent_size = 4

[*.{css,html,js,xml}]
indent_style = space
indent_size = 2
